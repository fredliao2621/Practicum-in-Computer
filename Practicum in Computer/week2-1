#include<stdio.h>
main()
{
	int a,b,c;
	float d;
	printf("Please in a postive integer:");
	scanf("%d",&a);
	b=a/10;
	c=a%10;
	d=a/5.0;
	if(a<=0)
	 printf("%d is not a postive integer!!",a);
	if(1<=a&&a<=9)
	 printf("%d is a small integer.\n",a);
	if(10<=a&&a<=99)
	{ 
	 printf("%d 的十位數為 %d\n",a,b);
	 printf("%d 的個位數為 %d\n",a,c);
    }
    
    if(a>=100&&a%5==0)
     {
     	printf("%d is a large integer.\n",a);
     	printf("%d is divisible by 5.\n",a);
	 }
	 
	if(a>=100&&a%5==1)
     {
     	printf("%d is a large integer.\n",a);
     	printf("%d+5=%d",a,a+5);
	 }
	 
	if(a>=100&&a%5==2)
     {
     	printf("%d is a large integer.\n",a);
     	printf("%d-5=%d",a,a-5);
	 }
	 
	if(a>=100&&a%5==3)
     {
     	printf("%d is a large integer.\n",a);
     	printf("%d*5=%d",a,a*5);
	 }
	
	if(a>=100&&a%5==4)
     {
     	printf("%d is a large integer.\n",a);
     	printf("%d/5=%.2f",a,d);
	 }
} 
